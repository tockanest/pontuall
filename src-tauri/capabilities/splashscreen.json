{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "splash-capability",
    "description": "Capability for the splashscreen window",
    "windows": [
        "splashscreen"
    ],
    "permissions": [
        "core:window:default",
        "core:event:default",
        "core:app:default",
        "core:image:default",
        "core:resources:default",
        "core:menu:default",
        "core:tray:default",
        "stronghold:allow-initialize",
        "stronghold:allow-create-client",
        "stronghold:allow-load-client",
        "stronghold:allow-save",
        "stronghold:allow-save-store-record",
        "stronghold:allow-get-store-record",
        "stronghold:allow-remove-store-record",
        "store:allow-get",
        "store:allow-set",
        "store:allow-save",
        "store:allow-load",
        "fs:default",
        "fs:allow-create",
        "fs:allow-appconfig-read-recursive",
        "fs:allow-appconfig-write-recursive",
        {
            "identifier": "fs:allow-exists",
            "allow": [
                {
                    "path": "$APPDATA/**"
                }
            ]
        }
    ]
}
